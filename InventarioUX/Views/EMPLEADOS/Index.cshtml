@using InventarioUX.Models
@model InventarioUX.Models.EMPLEADOS

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a data-toggle='modal' data-target='#modalEMP' class='btn  btn-info'>Nuevo Empleado</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CONTAINING_TIPO_EMPLEADO.TIPO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.USERNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PASSWORD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AP_PATERNO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AP_MATERNO)
        </th>
        <th></th>
    </tr>

    @foreach (EMPLEADOS emp in ViewBag.ListaEmpleados)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => emp.CONTAINING_TIPO_EMPLEADO.TIPO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.USERNAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.PASSWORD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.AP_PATERNO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => emp.AP_MATERNO)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = emp.ID }) |
                @Html.ActionLink("Details", "Details", new { id = emp.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = emp.ID })
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="modalEMP" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Empleado</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("Create")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}