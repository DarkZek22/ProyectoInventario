@using InventarioUX.Models
@model InventarioUX.Models.MOV_ENTRADA

@{
    ViewBag.Title = "Details";
}

<style>
    #total {
        text-align: left;
    }
</style>

<div class="panel-default">
    <div class="panel-heading">
        <h3 class="panel-heading">DETALLES DE LA ENTRADA</h3>
        <ul class="dl-horizontal">
            <li>Usuario: @Html.DisplayFor(model => model.CONTAINING_EMPLEADOS.USERNAME)</li>
            <li>Nombre Proveedor:  @Html.DisplayFor(model => model.CONTAINING_PROVEEDORES.NOMBRE)</li>
            <li>Fecha de entrada: @Html.DisplayFor(model => model.Fecha)</li>

        </ul>
    </div>

    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Subtotal</th>
                </tr>
            </thead>


            @foreach (MOV_ENTRADA_LISTA m in ViewBag.ListaEntrada)
        {
            <tbody>
                <tr>
                    <th>@m.CONTAINING_PRODUCTOS.NOMBRE</th>
                    <th>@m.CANTIDAD</th>
                    <th>@m.PRECIO</th>
                    <th>@(m.PRECIO * m.CANTIDAD)</th>
                </tr>
            </tbody>
    }

            <tfoot>
                <tr>
                    <th>Total</th>
                    <th colspan="2"></th>
                    <th id="total" colspan="2">@Html.DisplayFor(model => model.PRECIOTOTAL)</th>
                </tr>
            </tfoot>

        </table>
    </div>
    <p>
        @Html.ActionLink("Regresar al registro", "Index", new { area = "" }, new { @class = "btn btn-danger" })
    </p>
</div>
