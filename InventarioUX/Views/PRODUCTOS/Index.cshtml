@using InventarioUX.Models
@model InventarioUX.Models.PRODUCTOS

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    <a data-toggle='modal' data-target='#modalPROD' class='btn  btn-info'>Crear Producto</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CODIGOBARRAS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CONTAINING_CATEGORIAS.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRECIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPCION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MARCA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MODELO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SERIE)
        </th>
        <th></th>
    </tr>

    @foreach (PRODUCTOS prod in ViewBag.ListaProducto)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => prod.CODIGOBARRAS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.CONTAINING_CATEGORIAS.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.PRECIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.DESCRIPCION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.MARCA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.MODELO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => prod.SERIE)
            </td>
            <td>
                <a data-toggle='modal' data-target='#modalPRODEDIT' class='btn  btn-info' id="@prod.ID">Editar Producto</a>
                @Html.ActionLink("Details", "Details", new { id = prod.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = prod.ID })
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="modalPROD" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("Create")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="modalPRODEDIT" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm())
        {
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial("Edit")
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-default" data-dismiss="modal">Cancelar</button>
                    <input type="submit" value="Create" class="btn btn-default" />

                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
